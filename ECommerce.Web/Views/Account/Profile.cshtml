@model ECommerce.Models.User

@{
    ViewData["Title"] = "Profilim";
}

<!-- Page Header -->
<section class="bg-gray-50 py-8 border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4">
        <h1 class="text-2xl font-light tracking-tight">PROFİLİM</h1>
    </div>
</section>

<section class="max-w-4xl mx-auto px-4 py-12">
    
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 mb-6 text-sm">
            <i class="fas fa-check-circle mr-2"></i>
            @TempData["Success"]
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <!-- Sidebar -->
        <div class="md:col-span-1">
            <div class="bg-white p-6 border border-gray-200">
                <div class="text-center mb-6">
                    <div class="w-20 h-20 bg-gray-200 rounded-full mx-auto mb-4 flex items-center justify-center">
                        <i class="fas fa-user text-3xl text-gray-400"></i>
                    </div>
                    <h3 class="font-medium">@Model.FullName</h3>
                    <p class="text-sm text-gray-500">@Model.Email</p>
                </div>
                
                <nav class="space-y-2">
                    <a href="/Account/Profile" 
                       class="block px-4 py-3 bg-gray-100 text-black text-sm font-medium">
                        <i class="fas fa-user mr-2"></i> Hesap Bilgileri
                    </a>
                    <a href="/Order/MyOrders" 
                       class="block px-4 py-3 hover:bg-gray-50 text-sm">
                        <i class="fas fa-shopping-bag mr-2"></i> Siparişlerim
                    </a>
                    <a href="/Account/Logout" 
                       class="block px-4 py-3 hover:bg-gray-50 text-sm text-red-600">
                        <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap
                    </a>
                </nav>
            </div>
        </div>

        <!-- Profile Form -->
        <div class="md:col-span-2">
            <div class="bg-white p-8 border border-gray-200">
                <h2 class="text-sm font-semibold uppercase tracking-wider mb-6">
                    HESAP BİLGİLERİ
                </h2>

                <form asp-action="UpdateProfile" asp-controller="Account" method="post">
                    
                    <div class="space-y-6">
                        <!-- Full Name -->
                        <div>
                            <label class="block text-xs font-semibold uppercase tracking-wider mb-2">
                                AD SOYAD
                            </label>
                            <input type="text" 
                                   name="fullName" 
                                   value="@Model.FullName"
                                   required
                                   class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm">
                        </div>

                        <!-- Email (Readonly) -->
                        <div>
                            <label class="block text-xs font-semibold uppercase tracking-wider mb-2">
                                E-POSTA
                            </label>
                            <input type="email" 
                                   value="@Model.Email"
                                   readonly
                                   class="w-full px-4 py-3 border border-gray-300 bg-gray-50 text-sm text-gray-500">
                            <p class="text-xs text-gray-500 mt-1">E-posta adresi değiştirilemez</p>
                        </div>

                        <!-- Phone -->
                        <div>
                            <label class="block text-xs font-semibold uppercase tracking-wider mb-2">
                                TELEFON
                            </label>
                            <input type="tel" 
                                   name="phone" 
                                   value="@Model.Phone"
                                   pattern="[0-9]{10}"
                                   class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm">
                        </div>

                        <!-- Address -->
                        <div>
                            <label class="block text-xs font-semibold uppercase tracking-wider mb-2">
                                ADRES
                            </label>
                            <textarea name="address" 
                                      rows="3"
                                      class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm">@Model.Address</textarea>
                        </div>

                        <!-- City & Zip -->
                        <div class="grid grid-cols-2 gap-6">
                            <div>
                                <label class="block text-xs font-semibold uppercase tracking-wider mb-2">
                                    ŞEHİR
                                </label>
                                <input type="text" 
                                       name="city" 
                                       value="@Model.City"
                                       class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm">
                            </div>
                            <div>
                                <label class="block text-xs font-semibold uppercase tracking-wider mb-2">
                                    POSTA KODU
                                </label>
                                <input type="text" 
                                       name="zipCode" 
                                       value="@Model.ZipCode"
                                       class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm">
                            </div>
                        </div>

                        <!-- Submit -->
                        <button type="submit" 
                                class="w-full bg-black text-white py-4 text-sm font-medium tracking-wider hover:bg-gray-800">
                            DEĞİŞİKLİKLERİ KAYDET
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
</section>