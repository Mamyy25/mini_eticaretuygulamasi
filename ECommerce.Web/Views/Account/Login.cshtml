@{
    ViewData["Title"] = "Giriş Yap";
}

<!-- Page Header -->
<section class="bg-gray-50 py-12">
    <div class="max-w-md mx-auto px-4 text-center">
        <h1 class="text-3xl font-light tracking-tight mb-2">GİRİŞ YAP</h1>
        <p class="text-sm text-gray-600">Hesabınıza giriş yapın</p>
    </div>
</section>

@if (TempData["Success"] != null)
{
<div class="max-w-md mx-auto px-4 mt-6">
    <div class="bg-green-50 border border-green-200 text-green-800 px-6 py-4 text-sm">
        <i class="fas fa-check-circle mr-2"></i>@TempData["Success"]
    </div>
</div>
}

<!-- Login Form -->
<section class="max-w-md mx-auto px-4 py-12">
    <form asp-action="Login" method="post" class="bg-white border border-gray-200 p-8">

        <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 mb-6 text-sm"></div>

        <!-- Email -->
        <div class="mb-6">
            <label for="email" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                E-POSTA *
            </label>
            <input name="email"
                   type="email"
                   required
                   class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                   placeholder="ornek@email.com" />
        </div>

        <!-- Şifre -->
        <div class="mb-8">
            <label for="password" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                ŞİFRE *
            </label>
            <input name="password"
                   type="password"
                   required
                   class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                   placeholder="••••••••" />
        </div>

        <!-- Submit Button -->
        <button type="submit"
                class="w-full bg-black text-white px-6 py-4 text-sm font-medium tracking-wider hover:bg-gray-800 mb-4">
            GİRİŞ YAP
        </button>

        <!-- Register Link -->
        <div class="text-center text-sm text-gray-600">
            Hesabınız yok mu?
            <a asp-action="Register" class="text-black font-medium hover:underline">Kayıt Olun</a>
        </div>

    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}