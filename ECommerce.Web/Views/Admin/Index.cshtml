@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="max-w-7xl mx-auto px-4 py-12">
    
    <!-- Baþlýk -->
    <div class="mb-12 text-center">
        <h1 class="text-4xl font-bold text-black mb-4">Yönetim Paneli</h1>
        <p class="text-gray-600">Maðazanýzý buradan yönetin</p>
    </div>

    <!-- Ana Yönetim Kartlarý -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        
        <!-- Kategori Yönetimi Kartý -->
        <a asp-controller="Category" asp-action="Index" class="group">
            <div class="bg-gradient-to-br from-blue-500 to-blue-700 text-white p-8 hover:shadow-2xl transition-all duration-300 border-4 border-blue-600 hover:border-blue-800">
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-2xl font-bold mb-2">Kategori Yönetimi</h2>
                        <p class="text-blue-100 text-sm">Kategorileri düzenleyin ve yönetin</p>
                    </div>
                    <div class="bg-white bg-opacity-20 p-6 rounded-full group-hover:scale-110 transition-transform">
                        <i class="fas fa-folder text-5xl"></i>
                    </div>
                </div>
                
                <!-- Ýstatistikler -->
                <div class="grid grid-cols-2 gap-4 mt-6 pt-6 border-t border-blue-400">
                    <div>
                        <div class="text-3xl font-bold">@ViewBag.TotalCategories</div>
                        <div class="text-blue-100 text-sm">Aktif Kategori</div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold">@ViewBag.DeletedCategories</div>
                        <div class="text-blue-100 text-sm">Silinmiþ</div>
                    </div>
                </div>

                <div class="mt-6 flex items-center text-sm font-semibold">
                    Yönetim Paneline Git
                    <i class="fas fa-arrow-right ml-2 group-hover:translate-x-2 transition-transform"></i>
                </div>
            </div>
        </a>

        <!-- Ürün Yönetimi Kartý -->
        <a asp-controller="AdminProduct" asp-action="Index" class="group">
            <div class="bg-gradient-to-br from-green-500 to-green-700 text-white p-8 hover:shadow-2xl transition-all duration-300 border-4 border-green-600 hover:border-green-800">
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-2xl font-bold mb-2">Ürün Yönetimi</h2>
                        <p class="text-green-100 text-sm">Ürünleri düzenleyin ve yönetin</p>
                    </div>
                    <div class="bg-white bg-opacity-20 p-6 rounded-full group-hover:scale-110 transition-transform">
                        <i class="fas fa-box text-5xl"></i>
                    </div>
                </div>
                
                <!-- Ýstatistikler -->
                <div class="grid grid-cols-2 gap-4 mt-6 pt-6 border-t border-green-400">
                    <div>
                        <div class="text-3xl font-bold">@ViewBag.TotalProducts</div>
                        <div class="text-green-100 text-sm">Toplam Ürün</div>
                    </div>
                    <div>
                        <div class="text-3xl font-bold">@ViewBag.ActiveProducts</div>
                        <div class="text-green-100 text-sm">Aktif Ürün</div>
                    </div>
                </div>

                <div class="mt-6 flex items-center text-sm font-semibold">
                    Yönetim Paneline Git
                    <i class="fas fa-arrow-right ml-2 group-hover:translate-x-2 transition-transform"></i>
                </div>
            </div>
        </a>
    </div>

    <!-- Detaylý Ýstatistikler -->
    <div class="bg-white border border-gray-200 p-8">
        <h3 class="text-xl font-semibold text-black mb-6">
            <i class="fas fa-chart-bar mr-2 text-gray-600"></i>Detaylý Ýstatistikler
        </h3>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            
            <!-- Aktif Ürünler -->
            <div class="text-center p-6 bg-green-50 border border-green-200">
                <div class="text-4xl font-bold text-green-700 mb-2">
                    @ViewBag.ActiveProducts
                </div>
                <div class="text-sm text-green-600 font-medium">
                    <i class="fas fa-check-circle mr-1"></i>Aktif Ürün
                </div>
            </div>

            <!-- Düþük Stok -->
            <div class="text-center p-6 bg-yellow-50 border border-yellow-200">
                <div class="text-4xl font-bold text-yellow-700 mb-2">
                    @ViewBag.LowStock
                </div>
                <div class="text-sm text-yellow-600 font-medium">
                    <i class="fas fa-exclamation-triangle mr-1"></i>Düþük Stok
                </div>
            </div>

            <!-- Tükenen Ürünler -->
            <div class="text-center p-6 bg-red-50 border border-red-200">
                <div class="text-4xl font-bold text-red-700 mb-2">
                    @ViewBag.OutOfStock
                </div>
                <div class="text-sm text-red-600 font-medium">
                    <i class="fas fa-times-circle mr-1"></i>Stokta Yok
                </div>
            </div>

            <!-- Silinen Ürünler -->
            <div class="text-center p-6 bg-gray-50 border border-gray-200">
                <div class="text-4xl font-bold text-gray-700 mb-2">
                    @ViewBag.DeletedProducts
                </div>
                <div class="text-sm text-gray-600 font-medium">
                    <i class="fas fa-trash mr-1"></i>Silinmiþ Ürün
                </div>
            </div>
        </div>
    </div>

    <!-- Hýzlý Eriþim Butonlarý -->
    <div class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-4">
        <a asp-controller="Category" asp-action="Create" class="bg-blue-600 text-white px-6 py-4 hover:bg-blue-700 text-center text-sm font-medium">
            <i class="fas fa-plus-circle mr-2"></i>Yeni Kategori
        </a>
        <a asp-controller="AdminProduct" asp-action="Create" class="bg-green-600 text-white px-6 py-4 hover:bg-green-700 text-center text-sm font-medium">
            <i class="fas fa-plus-circle mr-2"></i>Yeni Ürün
        </a>
        <a asp-controller="Category" asp-action="Index" asp-route-showDeleted="true" class="bg-gray-600 text-white px-6 py-4 hover:bg-gray-700 text-center text-sm font-medium">
            <i class="fas fa-trash-restore mr-2"></i>Silinen Kategoriler
        </a>
        <a asp-controller="AdminProduct" asp-action="Index" asp-route-showDeleted="true" class="bg-gray-600 text-white px-6 py-4 hover:bg-gray-700 text-center text-sm font-medium">
            <i class="fas fa-trash-restore mr-2"></i>Silinen Ürünler
        </a>
    </div>

    <!-- Ana Sayfaya Dön -->
    <div class="mt-8 text-center">
        <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-black text-sm">
            <i class="fas fa-arrow-left mr-2"></i>Ana Sayfaya Dön
        </a>
    </div>
</div>