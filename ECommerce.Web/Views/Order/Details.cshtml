@model ECommerce.Models.Order

@{
    ViewData["Title"] = "Sipariş Detayı";
}

<!-- Page Header -->
<section class="bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4">
        <div class="flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-light tracking-tight mb-2">SİPARİŞ DETAYI</h1>
                <p class="text-sm text-gray-600">Sipariş #@Model.Id</p>
            </div>
            <a asp-action="MyOrders"
               class="border border-gray-300 text-black px-6 py-3 text-sm font-medium tracking-wider hover:bg-gray-50">
                <i class="fas fa-arrow-left mr-2"></i>GERİ DÖN
            </a>
        </div>
    </div>
</section>

<!-- Order Details -->
<section class="max-w-4xl mx-auto px-4 py-12">

    <!-- Status Card -->
    <div class="bg-white border border-gray-200 p-6 mb-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-2">SİPARİŞ DURUMU</p>
                @switch (Model.Status)
                {
                    case "Pending":
                <span class="inline-block bg-yellow-100 text-yellow-800 px-4 py-2 text-sm font-medium uppercase tracking-wider">
                    <i class="fas fa-clock mr-2"></i>HAZIRLANIYOR
                </span>
                        break;
                    case "Shipped":
                <span class="inline-block bg-blue-100 text-blue-800 px-4 py-2 text-sm font-medium uppercase tracking-wider">
                    <i class="fas fa-shipping-fast mr-2"></i>KARGODA
                </span>
                        break;
                    case "Delivered":
                <span class="inline-block bg-green-100 text-green-800 px-4 py-2 text-sm font-medium uppercase tracking-wider">
                    <i class="fas fa-check-circle mr-2"></i>TESLİM EDİLDİ
                </span>
                        break;
                    case "Cancelled":
                <span class="inline-block bg-red-100 text-red-800 px-4 py-2 text-sm font-medium uppercase tracking-wider">
                    <i class="fas fa-times-circle mr-2"></i>İPTAL EDİLDİ
                </span>
                        break;
                    default:
                <span class="inline-block bg-gray-100 text-gray-800 px-4 py-2 text-sm font-medium uppercase tracking-wider">
                    @Model.Status
                </span>
                        break;
                }
            </div>
            @if (!string.IsNullOrEmpty(Model.TrackingNumber))
            {
            <div class="text-right">
                <p class="text-sm text-gray-600 mb-1">KARGO TAKİP NO</p>
                <p class="font-mono font-medium">@Model.TrackingNumber</p>
            </div>
            }
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <!-- Left: Order Info -->
        <div class="lg:col-span-2 space-y-6">

            <!-- Order Info -->
            <div class="bg-white border border-gray-200 p-6">
                <h3 class="font-medium mb-4">SİPARİŞ BİLGİLERİ</h3>
                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <p class="text-gray-600 mb-1">Sipariş Tarihi</p>
                        <p class="font-medium">@Model.OrderDate.ToString("dd MMMM yyyy, HH:mm")</p>
                    </div>
                    <div>
                        <p class="text-gray-600 mb-1">Sipariş No</p>
                        <p class="font-medium">#@Model.Id</p>
                    </div>
                    @if (Model.ShippedDate != null)
                    {
                    <div>
                        <p class="text-gray-600 mb-1">Kargo Tarihi</p>
                        <p class="font-medium">@Model.ShippedDate?.ToString("dd MMMM yyyy, HH:mm")</p>
                    </div>
                    }
                    @if (Model.DeliveredDate != null)
                    {
                    <div>
                        <p class="text-gray-600 mb-1">Teslimat Tarihi</p>
                        <p class="font-medium">@Model.DeliveredDate?.ToString("dd MMMM yyyy, HH:mm")</p>
                    </div>
                    }
                </div>
            </div>

            <!-- Shipping Address -->
            <div class="bg-white border border-gray-200 p-6">
                <h3 class="font-medium mb-4">TESLİMAT BİLGİLERİ</h3>
                <div class="text-sm text-gray-700 space-y-2">
                    <p><i class="fas fa-map-marker-alt text-gray-400 mr-2 w-4"></i><strong>Adres:</strong> @Model.ShippingAddress</p>
                    <p><i class="fas fa-city text-gray-400 mr-2 w-4"></i><strong>Şehir:</strong> @Model.ShippingCity</p>
                    @if (!string.IsNullOrEmpty(Model.ShippingZipCode))
                    {
                    <p><i class="fas fa-mail-bulk text-gray-400 mr-2 w-4"></i><strong>Posta Kodu:</strong> @Model.ShippingZipCode</p>
                    }
                    <p><i class="fas fa-phone text-gray-400 mr-2 w-4"></i><strong>Telefon:</strong> @Model.ShippingPhone</p>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <p class="text-gray-600 mb-1"><i class="fas fa-sticky-note text-gray-400 mr-2"></i><strong>Sipariş Notu:</strong></p>
                        <p class="text-gray-700 italic">@Model.Notes</p>
                    </div>
                    }
                </div>
            </div>

            <!-- Products -->
            <div class="bg-white border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                    <h3 class="font-medium">ÜRÜNLER (@Model.OrderItems.Count adet)</h3>
                </div>

                @foreach (var item in Model.OrderItems)
                {
                <div class="p-6 border-b border-gray-200 last:border-b-0">
                    <div class="flex items-center space-x-4">
                        <!-- Image -->
                        <div class="flex-shrink-0">
                            <div class="relative overflow-hidden bg-gray-100" style="width: 80px; height: 80px;">
                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                    {
                                <img src="@item.Product.ImageUrl" alt="@item.ProductName" class="w-full h-full object-cover" />
                                    }
                                    else
                                    {
                                <div class="flex items-center justify-center h-full">
                                    <i class="fas fa-image text-2xl text-gray-300"></i>
                                </div>
                                    }
                            </div>
                        </div>

                        <!-- Info -->
                        <div class="flex-1">
                            <h4 class="font-medium mb-1">@item.ProductName</h4>
                            <p class="text-sm text-gray-600">Miktar: @item.Quantity</p>
                            <p class="text-sm text-gray-600">Birim Fiyat: ₺@item.Price.ToString("N2")</p>
                        </div>

                        <!-- Price -->
                        <div class="text-right">
                            <p class="font-medium">₺@((item.Quantity * item.Price).ToString("N2"))</p>
                        </div>
                    </div>
                </div>
                }
            </div>

        </div>

        <!-- Right: Order Summary -->
        <div class="lg:col-span-1">
            <div class="bg-white border border-gray-200 p-6 sticky top-24">

                <h3 class="font-medium mb-6">ÖDEME ÖZETİ</h3>

                <div class="space-y-4 mb-6">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Ara Toplam</span>
                        <span>₺@Model.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Kargo</span>
                        <span class="text-green-600">Ücretsiz</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">KDV</span>
                        <span>Dahil</span>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-4 mb-6">
                    <div class="flex justify-between font-medium text-lg">
                        <span>TOPLAM</span>
                        <span>₺@Model.TotalAmount.ToString("N2")</span>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="mb-6 p-4 bg-gray-50 border border-gray-200">
                    <h4 class="text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">ÖDEME YÖNTEMİ</h4>
                    <div class="flex items-center">
                        <i class="fas fa-money-bill-wave text-green-600 mr-2"></i>
                        <span class="text-sm">Kapıda Ödeme</span>
                    </div>
                </div>

                <!-- Actions -->
                @if (Model.Status == "Pending")
                {
                <button class="w-full border border-red-300 text-red-600 px-6 py-3 text-sm font-medium tracking-wider hover:bg-red-50 mb-3">
                    <i class="fas fa-times mr-2"></i>SİPARİŞİ İPTAL ET
                </button>
                }

                <a asp-action="MyOrders"
                   class="block w-full text-center border border-gray-300 text-black px-6 py-3 text-sm font-medium tracking-wider hover:bg-gray-50">
                    TÜM SİPARİŞLERİM
                </a>

                <!-- Help -->
                <div class="mt-6 text-center">
                    <p class="text-xs text-gray-500 mb-2">Yardıma mı ihtiyacınız var?</p>
                    <a href="#" class="text-sm text-blue-600 hover:underline">Müşteri Hizmetleri</a>
                </div>

            </div>
        </div>

    </div>
</section>