@model ECommerce.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Teslimat Bilgileri";
}

<!-- Progress Bar -->
<section class="bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
        <div class="flex items-center justify-between">
            <div class="flex-1 text-center">
                <div class="w-10 h-10 bg-black text-white rounded-full mx-auto flex items-center justify-center mb-2">1</div>
                <p class="text-xs font-medium">TESLİMAT</p>
            </div>
            <div class="flex-1 border-t-2 border-gray-300"></div>
            <div class="flex-1 text-center">
                <div class="w-10 h-10 bg-gray-300 text-gray-600 rounded-full mx-auto flex items-center justify-center mb-2">2</div>
                <p class="text-xs text-gray-500">ÖZET</p>
            </div>
            <div class="flex-1 border-t-2 border-gray-300"></div>
            <div class="flex-1 text-center">
                <div class="w-10 h-10 bg-gray-300 text-gray-600 rounded-full mx-auto flex items-center justify-center mb-2">3</div>
                <p class="text-xs text-gray-500">ONAY</p>
            </div>
        </div>
    </div>
</section>

<!-- Form -->
<section class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-2xl font-light mb-8">TESLİMAT BİLGİLERİ</h1>

    <form asp-action="Review" method="post" class="bg-white border border-gray-200 p-8">

        <!-- Adres -->
        <div class="mb-6">
            <label asp-for="Order.ShippingAddress" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                TESLİMAT ADRESİ *
            </label>
            <textarea asp-for="Order.ShippingAddress"
                      rows="3"
                      required
                      class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm resize-none"
                      placeholder="Mahalle, Sokak, No, Daire"></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- Şehir -->
            <div>
                <label asp-for="Order.ShippingCity" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                    ŞEHİR *
                </label>
                <input asp-for="Order.ShippingCity"
                       required
                       class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                       placeholder="İstanbul" />
            </div>

            <!-- Posta Kodu -->
            <div>
                <label asp-for="Order.ShippingZipCode" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                    POSTA KODU
                </label>
                <input asp-for="Order.ShippingZipCode"
                       class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                       placeholder="34000" />
            </div>
        </div>

        <!-- Telefon -->
        <div class="mb-6">
            <label asp-for="Order.ShippingPhone" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                TELEFON *
            </label>
            <input asp-for="Order.ShippingPhone"
                   type="tel"
                   required
                   class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                   placeholder="05XX XXX XX XX" />
        </div>

        <!-- Notlar -->
        <div class="mb-8">
            <label asp-for="Order.Notes" class="block text-xs font-semibold uppercase tracking-wider text-gray-700 mb-2">
                SİPARİŞ NOTU (İsteğe Bağlı)
            </label>
            <textarea asp-for="Order.Notes"
                      rows="3"
                      class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm resize-none"
                      placeholder="Sipariş ile ilgili notlarınız"></textarea>
        </div>

        <!-- Sipariş Özeti -->
        <div class="bg-gray-50 p-6 mb-8">
            <h3 class="font-medium mb-4">SİPARİŞ ÖZETİ</h3>
            <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-600">Ürün Toplamı</span>
                    <span>₺@Model.Cart.TotalAmount.ToString("N2")</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Kargo</span>
                    <span class="text-green-600">Ücretsiz</span>
                </div>
                <div class="border-t border-gray-300 pt-2 mt-2 flex justify-between font-medium text-lg">
                    <span>TOPLAM</span>
                    <span>₺@Model.Cart.TotalAmount.ToString("N2")</span>
                </div>
            </div>
        </div>

        <!-- Butonlar -->
        <div class="flex space-x-4">
            <button type="submit"
                    class="flex-1 bg-black text-white px-6 py-4 text-sm font-medium tracking-wider hover:bg-gray-800">
                DEVAM ET
            </button>
            <a asp-controller="Cart" asp-action="Index"
               class="flex-1 text-center border border-gray-300 text-black px-6 py-4 text-sm font-medium tracking-wider hover:bg-gray-50">
                SEPETE DÖN
            </a>
        </div>

    </form>
</section>