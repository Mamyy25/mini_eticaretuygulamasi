@model ECommerce.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
    var productCount = ViewBag.ProductCount ?? 0;
}

<div class="max-w-3xl mx-auto px-4 py-12">

    <!-- Baþlýk -->
    <div class="mb-8">
        <h1 class="text-3xl font-semibold text-black">Kategori Sil</h1>
        <p class="text-gray-600 mt-2">Bu kategoriyi silmek istediðinizden emin misiniz?</p>
    </div>

    <!-- Uyarý Mesajý -->
    @if (productCount > 0)
    {
    <div class="bg-red-50 border border-red-200 px-6 py-4 mb-6">
        <div class="flex items-start">
            <i class="fas fa-exclamation-triangle text-red-600 text-xl mt-1 mr-3"></i>
            <div class="text-sm text-red-800">
                <strong>DÝKKAT!</strong> Bu kategoriye ait <strong>@productCount adet</strong> ürün bulunmaktadýr.
                Kategoriyi silmek için önce bu ürünleri silmelisiniz veya baþka bir kategoriye taþýmalýsýnýz.
            </div>
        </div>
    </div>
    }

    <!-- Kategori Detaylarý -->
    <div class="bg-white border border-gray-200 p-8">
        <dl class="divide-y divide-gray-200">
            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Kategori Adý</dt>
                <dd class="text-base text-black">@Model.Name</dd>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Açýklama</dt>
                <dd class="text-base text-gray-600">@Model.Description</dd>
            </div>
            }

            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Oluþturulma Tarihi</dt>
                <dd class="text-base text-gray-600">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Son Güncelleme</dt>
                <dd class="text-base text-gray-600">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</dd>
            </div>
            }

            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Ürün Sayýsý</dt>
                <dd class="text-base text-gray-600">@productCount adet</dd>
            </div>
        </dl>

        <!-- Butonlar -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200 mt-6">
            <a asp-action="Index" class="px-6 py-3 border border-gray-300 text-gray-700 hover:bg-gray-50 text-sm font-medium">
                Ýptal
            </a>

            @if (productCount == 0)
            {
            <form asp-action="Delete" method="post" class="inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit"
                        class="bg-red-600 text-white px-6 py-3 hover:bg-red-700 text-sm font-medium"
                        onclick="return confirm('Bu kategoriyi silmek istediðinizden emin misiniz?');">
                    <i class="fas fa-trash mr-2"></i>Evet, Sil
                </button>
            </form>
            }
            else
            {
            <button type="button"
                    disabled
                    class="bg-gray-400 text-white px-6 py-3 cursor-not-allowed text-sm font-medium">
                <i class="fas fa-ban mr-2"></i>Silinemez
            </button>
            }
        </div>
    </div>

    <!-- Bilgi Kutusu -->
    <div class="mt-6 bg-yellow-50 border border-yellow-200 px-6 py-4">
        <div class="flex items-start">
            <i class="fas fa-exclamation-circle text-yellow-600 mt-1 mr-3"></i>
            <div class="text-sm text-yellow-800">
                <strong>Önemli:</strong> Silinen kategoriler geri getirilemez. Bu iþlem kalýcýdýr.
            </div>
        </div>
    </div>
</div>