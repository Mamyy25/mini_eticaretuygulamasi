@model IEnumerable<ECommerce.Models.Category>

    @{
    ViewData["Title"] = "Kategori Yönetimi";
    var showDeleted = ViewBag.ShowDeleted ?? false;
    }

    <div class="max-w-7xl mx-auto px-4 py-12">

        <!-- Baþlýk ve Ekleme Butonu -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-semibold text-black">Kategori Yönetimi</h1>
                <p class="text-gray-600 mt-2">Maðaza kategorilerini yönetin</p>
            </div>
            <div class="flex space-x-4">
                <a asp-controller="AdminProduct" asp-action="Index" class="bg-blue-600 text-white px-6 py-3 hover:bg-blue-700 text-sm font-medium">
                    <i class="fas fa-box mr-2"></i>Ürün Yönetimi
                </a>
                @if (!showDeleted)
            {
                <a asp-action="Index" asp-route-showDeleted="true" class="bg-gray-600 text-white px-6 py-3 hover:bg-gray-700 text-sm font-medium">
                    <i class="fas fa-trash-restore mr-2"></i>Silinenleri Göster
                </a>
            }
            else
            {
                <a asp-action="Index" class="bg-gray-600 text-white px-6 py-3 hover:bg-gray-700 text-sm font-medium">
                    <i class="fas fa-list mr-2"></i>Aktif Kategoriler
                </a>
            }
                <a asp-action="Create" class="bg-black text-white px-6 py-3 hover:bg-gray-800 text-sm font-medium">
                    <i class="fas fa-plus mr-2"></i>Yeni Kategori Ekle
                </a>
            </div>
        </div>

        @if (!Model.Any())
    {
        <div class="bg-gray-50 border border-gray-200 p-12 text-center">
            <i class="fas fa-folder-open text-6xl text-gray-300 mb-4"></i>
            <p class="text-gray-600 mb-4">Henüz kategori eklenmemiþ</p>
            <a asp-action="Create" class="bg-black text-white px-6 py-3 hover:bg-gray-800 text-sm font-medium inline-block">
                Ýlk Kategoriyi Ekle
            </a>
        </div>
    }
    else
    {
 <!-- Kategori Tablosu -->
        <div class="bg-white border border-gray-200">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Kategori Adý
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Açýklama
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Durum
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Oluþturulma
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Ýþlemler
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                    <tr class="@(item.IsDeleted ? "bg-red-50" : "hover:bg-gray-50")">
                        <td class="px-6 py-4">
                            <div class="font-medium @(item.IsDeleted ? "text-red-600 line-through" : "text-black")">
                                @item.Name
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-600">
                                @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                @(item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                                    }
                                    else
                                    {
                                <span class="text-gray-400 italic">Açýklama yok</span>
                                    }
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            @if (item.IsDeleted)
                                {
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <i class="fas fa-trash mr-1"></i> Silinmiþ
                            </span>
                                }
                                else
                                {
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check mr-1"></i> Aktif
                            </span>
                                }
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-600">
                                @item.CreatedAt.ToString("dd.MM.yyyy")
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex justify-end space-x-3">
                                @if (item.IsDeleted)
                                    {
                                <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="inline">
                                    <button type="submit" class="text-green-600 hover:text-green-800 text-sm">
                                        <i class="fas fa-undo"></i> Geri Al
                                    </button>
                                </form>
                                <a asp-action="PermanentDelete" asp-route-id="@item.Id"
                                   class="text-red-600 hover:text-red-800 text-sm font-semibold">
                                    <i class="fas fa-trash-alt"></i> Kalýcý Sil
                                </a>
                                    }
                                    else
                                    {
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="text-gray-600 hover:text-black text-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="text-red-600 hover:text-red-800 text-sm">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                                    }
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

 <!-- Ýstatistikler -->
        <div class="mt-6 bg-gray-50 border border-gray-200 px-6 py-4">
            <div class="text-sm text-gray-600">
                <strong>Toplam Kategori:</strong> @Model.Count()
            </div>
        </div>
    }

        <!-- Geri Dön Butonu -->
        <div class="mt-8">
            <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-black text-sm">
                <i class="fas fa-arrow-left mr-2"></i>Ana Sayfaya Dön
            </a>
        </div>
    </div>
