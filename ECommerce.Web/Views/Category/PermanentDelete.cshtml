@model ECommerce.Models.Category

@{
    ViewData["Title"] = "Kalıcı Sil";
    var productCount = ViewBag.ProductCount ?? 0;
}

<div class="max-w-3xl mx-auto px-4 py-12">

    <!-- Başlık -->
    <div class="mb-8">
        <h1 class="text-3xl font-semibold text-red-600">⚠️ Kalıcı Silme</h1>
        <p class="text-gray-600 mt-2">Bu işlem geri alınamaz! Kategori veritabanından tamamen silinecektir.</p>
    </div>

    <!-- UYARI -->
    <div class="bg-red-100 border-2 border-red-500 px-6 py-6 mb-6">
        <div class="flex items-start">
            <i class="fas fa-exclamation-triangle text-red-600 text-3xl mt-1 mr-4"></i>
            <div>
                <h3 class="text-lg font-semibold text-red-800 mb-2">DİKKAT! Kalıcı Silme İşlemi</h3>
                <ul class="text-sm text-red-800 space-y-1 list-disc list-inside">
                    <li>Bu kategori <strong>veritabanından tamamen silinecektir</strong></li>
                    <li>Bu işlem <strong>geri alınamaz</strong></li>
                    <li>Silinen kategori <strong>kurtarılamaz</strong></li>
                    @if (productCount > 0)
                    {
                    <li class="font-bold">Bu kategoriye ait @productCount adet ürün bulunmaktadır!</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @if (productCount > 0)
    {
    <div class="bg-yellow-50 border border-yellow-200 px-6 py-4 mb-6">
        <div class="flex items-start">
            <i class="fas fa-ban text-yellow-600 text-xl mt-1 mr-3"></i>
            <div class="text-sm text-yellow-800">
                <strong>İşlem Engellenmiştir!</strong><br>
                Bu kategoriye ait <strong>@productCount adet</strong> ürün bulunmaktadır.
                Kategoriyi kalıcı olarak silmek için önce bu ürünleri kalıcı olarak silmelisiniz!
            </div>
        </div>
    </div>
    }

    <!-- Kategori Detayları -->
    <div class="bg-white border-2 border-red-200 p-8">
        <h3 class="text-lg font-semibold text-black mb-4">Silinecek Kategori:</h3>

        <dl class="divide-y divide-gray-200">
            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Kategori Adı</dt>
                <dd class="text-base text-black font-semibold">@Model.Name</dd>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Açıklama</dt>
                <dd class="text-base text-gray-600">@Model.Description</dd>
            </div>
            }

            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Oluşturulma Tarihi</dt>
                <dd class="text-base text-gray-600">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
            </div>

            @if (Model.UpdatedAt.HasValue)
            {
            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Son Güncelleme</dt>
                <dd class="text-base text-gray-600">@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</dd>
            </div>
            }

            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Durum</dt>
                <dd>
                    @if (Model.IsDeleted)
                    {
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <i class="fas fa-trash mr-1"></i> Silinmiş
                    </span>
                    }
                    else
                    {
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <i class="fas fa-check mr-1"></i> Aktif
                    </span>
                    }
                </dd>
            </div>

            <div class="py-4">
                <dt class="text-sm font-medium text-gray-700 mb-1">Bağlı Ürün Sayısı</dt>
                <dd class="text-base text-gray-600">
                    <span class="@(productCount > 0 ? "text-red-600 font-bold" : "")">
                        @productCount adet
                    </span>
                </dd>
            </div>
        </dl>

        <!-- Butonlar -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200 mt-6">
            <a asp-action="Index" class="px-6 py-3 border border-gray-300 text-gray-700 hover:bg-gray-50 text-sm font-medium">
                <i class="fas fa-arrow-left mr-2"></i>İptal
            </a>

            @if (productCount == 0)
            {
            <form asp-action="PermanentDelete" method="post" class="inline"
                  onsubmit="return confirm('⚠️ SON UYARI!\n\nBu kategoriyi KALICI OLARAK silmek istediğinizden emin misiniz?\n\nBu işlem GERİ ALINAMAZ!');">
                <input type="hidden" asp-for="Id" />
                <button type="submit"
                        class="bg-red-600 text-white px-6 py-3 hover:bg-red-700 text-sm font-bold">
                    <i class="fas fa-exclamation-triangle mr-2"></i>KALICI OLARAK SİL
                </button>
            </form>
            }
            else
            {
            <button type="button"
                    disabled
                    class="bg-gray-400 text-white px-6 py-3 cursor-not-allowed text-sm font-medium">
                <i class="fas fa-ban mr-2"></i>Silinemez
            </button>
            }
        </div>
    </div>

    <!-- Alt Bilgi -->
    <div class="mt-6 bg-gray-50 border border-gray-200 px-6 py-4">
        <div class="text-sm text-gray-600">
            <strong>💡 İpucu:</strong> Eğer bu kategoriyi geçici olarak gizlemek istiyorsanız,
            "Sil" butonunu kullanın. Böylece gerektiğinde geri getirebilirsiniz.
        </div>
    </div>
</div>