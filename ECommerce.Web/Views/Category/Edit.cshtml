@model ECommerce.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="max-w-3xl mx-auto px-4 py-12">

    <!-- Baþlýk -->
    <div class="mb-8">
        <h1 class="text-3xl font-semibold text-black">Kategori Düzenle</h1>
        <p class="text-gray-600 mt-2">Kategori bilgilerini güncelleyin</p>
    </div>

    <!-- Form -->
    <div class="bg-white border border-gray-200 p-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 mb-6 text-sm"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <!-- Kategori Adý -->
            <div class="mb-6">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2">
                    Kategori Adý <span class="text-red-500">*</span>
                </label>
                <input asp-for="Name"
                       class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                       placeholder="Örn: Elektronik, Giyim, Kitap">
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <!-- Açýklama -->
            <div class="mb-6">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">
                    Açýklama
                </label>
                <textarea asp-for="Description"
                          rows="4"
                          class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-black text-sm"
                          placeholder="Kategori hakkýnda kýsa açýklama"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <!-- Bilgi -->
            <div class="mb-6 bg-gray-50 border border-gray-200 px-4 py-3">
                <div class="text-sm text-gray-600">
                    <div class="mb-1">
                        <strong>Oluþturulma:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                    <div>
                        <strong>Son Güncelleme:</strong> @Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")
                    </div>
                    }
                </div>
            </div>

            <!-- Butonlar -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                <a asp-action="Index" class="px-6 py-3 border border-gray-300 text-gray-700 hover:bg-gray-50 text-sm font-medium">
                    Ýptal
                </a>
                <button type="submit" class="bg-black text-white px-6 py-3 hover:bg-gray-800 text-sm font-medium">
                    <i class="fas fa-save mr-2"></i>Deðiþiklikleri Kaydet
                </button>
            </div>
        </form>
    </div>

    <!-- Bilgi Kutusu -->
    <div class="mt-6 bg-blue-50 border border-blue-200 px-6 py-4">
        <div class="flex items-start">
            <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
            <div class="text-sm text-blue-800">
                <strong>Not:</strong> Kategori adýný deðiþtirirseniz, bu kategoriye ait tüm ürünlerde yeni isim görünecektir.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}