@model List<ECommerce.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<h1 class="mb-4">Tüm Ürünler</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Henüz ürün bulunmamaktadır.
    </div>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span>Resim Yok</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Category?.Name</p>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-success fw-bold fs-5">@product.Price.ToString("C")</span>
                            <span class="badge bg-info">Stok: @product.Stock</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/Product/Details/@product.Id" class="btn btn-primary w-100">Detayları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
}