@model ECommerce.Models.Product

@{
    ViewData["Title"] = "Ürün Sil";
}

<!-- Page Header -->
<section class="bg-red-50 py-12 border-b border-red-200">
    <div class="max-w-2xl mx-auto px-4 text-center">
        <div class="mb-4">
            <i class="fas fa-exclamation-triangle text-5xl text-red-600"></i>
        </div>
        <h1 class="text-3xl font-light tracking-tight mb-2">ÜRÜNÜ SİL</h1>
        <p class="text-sm text-red-800">Bu işlem geri alınamaz!</p>
    </div>
</section>

<!-- Delete Confirmation -->
<section class="max-w-2xl mx-auto px-4 py-12">
    <div class="bg-white border border-red-200 p-8">
        
        <div class="text-center mb-8">
            <p class="text-gray-700 mb-2">Aşağıdaki ürünü silmek istediğinizden emin misiniz?</p>
            <p class="text-sm text-gray-500">Bu işlem ürünü sistemden kaldıracaktır.</p>
        </div>

        <!-- Product Summary -->
        <div class="bg-gray-50 border border-gray-200 p-6 mb-8">
            <div class="flex items-center space-x-6">
                <!-- Image -->
                <div class="flex-shrink-0">
                    <div class="relative overflow-hidden bg-gray-200" style="width: 100px; height: 100px;">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <div class="flex items-center justify-center h-full">
                                <i class="fas fa-image text-3xl text-gray-400"></i>
                            </div>
                        }
                    </div>
                </div>

                <!-- Info -->
                <div class="flex-1">
                    <h3 class="text-lg font-medium mb-1">@Model.Name</h3>
                    <p class="text-sm text-gray-600 mb-2">@Model.Category?.Name</p>
                    <div class="flex items-center space-x-4 text-sm">
                        <span class="font-medium">₺@Model.Price.ToString("N2")</span>
                        <span class="text-gray-500">•</span>
                        <span class="text-gray-600">Stok: @Model.Stock</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmation Form -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="flex space-x-4">
                <button type="submit" 
                        class="flex-1 bg-red-600 text-white px-6 py-4 text-sm font-medium tracking-wider hover:bg-red-700">
                    <i class="fas fa-trash mr-2"></i>EVET, ÜRÜNÜ SİL
                </button>
                <a asp-action="Index" 
                   class="flex-1 text-center border border-gray-300 text-black px-6 py-4 text-sm font-medium tracking-wider hover:bg-gray-50">
                    HAYIR, İPTAL ET
                </a>
            </div>
        </form>

    </div>
</section>